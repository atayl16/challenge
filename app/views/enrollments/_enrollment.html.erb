<div class="card">
  <div class="card-header">
    <div class="fa fa-user"></div>
    <%= link_to enrollment.user.name, user_path(enrollment.user) %> reviewed
    <div class="fa fa-trophy"></div>
    <%= link_to enrollment.project, project_path(enrollment.project) %>
    <%= time_ago_in_words(enrollment.updated_at) %> ago

  </div>
  <div class="card-body">
    <div class="text-warning fa fa-star"></div>
    <b>
      <%= enrollment.rating %>
    </b>
    <%= complete_button(enrollment) %>
  </div>
  <% if current_user %>
    <div class="card-footer">
      <% if policy(enrollment).edit? %>
        <%= button_to 'Edit Review', edit_enrollment_path(enrollment), method: :get, :class => "btn btn-shiny btn-info" %>
      <% end %>
    </div>
  <% end %>
</div>
