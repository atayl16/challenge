<div class="border-left pl-4 mt-4">
  <strong><%= comment.user.name %></strong> commented
  <%= comment.content %>

  <div data-controller="reply">
    <small><%= link_to "Reply", "#", data: { action: "click->reply#toggle" } %></small>
    <%= render partial: "comments/form", locals: { commentable: @project, parent_id: comment.id, class: "mt-4 d-none", target: "reply.form", id: comment.object_id } %>
  </div>

  <%= render comment.comments %>
</div>
