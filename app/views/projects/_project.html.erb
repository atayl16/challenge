<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-8">
        <div class="h4">
          <div class="fa fa-trophy"></div>
          <%= link_to project.name, project_path(project) %><p></p>
          <hr>          
        </div>
        <em>Created by <%= link_to project.user.name, user_path(project.user) %>  <%= time_ago_in_words(project.created_at) %> ago</em>
        <p></p>
        <div class="fa fa-users"></div>
          <%= project.enrollments_count %>
        <% if project.average_rating > 0 %>
        <div class="text-warning fa fa-star"></div>
          <%= project.average_rating %>
        <% end %>
        <span class='parent-likes'>
          <span class="like_count" <%=project.id%>>
            <i class="fas fa-heart"></i> <%=project.get_likes.size%>
          </span>
        </span>
        <% if project.duration? %>
        <p></p>
          <em class="text-right">Time: <%= project.duration %></em><p></p>
        <% end %>
        <% if project.requirements? %>
        <p></p>
          <em class="text-right">Requirements: <%= project.requirements %></em><p></p>
        <% end %>
        <p></p>

      </div>
      <div class="col-md-4">
        <%= image_tag project_avatar(project), class: "rounded img-fluid float-end" %><p></p>
      </div>
    </div>
  </div>
  <div class="card-body">
    <%= project.content %>
  </div>
  <div class="card-footer">
    <div class="btn-group">
      <%= like_button(project) %>
      <%= review_button(project) %>
      <%= edit_project_button(project) %>
      <%= enrollment_button(project) %>
      <%= delete_project_button(project) %>
    </div>
  </div>
</div>
