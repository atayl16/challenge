<div class="card">
  <div class="card-header">
    <div class="fa fa-trophy"></div>
    <%= link_to project.name, project_path(project) %>
  </div>
  <div class="card-body">
    <%= project.description %>
  </div>
  <div class="card-footer">
    Created by <%= project.user.email %> on <%= project.created_at.strftime('%b-%d-%Y') %>
  </div>
  <% if policy(project).edit? %>
  <div class="card-footer">
    <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-sm btn-warning shiny' %>
    <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger shiny' %>
  </div>
  <% end %>
</div>
