<%= render 'project', project: @project %>
  <div class="card-footer">
    <div class="btn-group" role="group" >
      <%= edit_project_button(@project) %>
      <%= delete_project_button(@project) %>
    </div>
  </div>
<p></p>
  <div class="card">
    <div class="card-header">
      <h5>Comments</h5>
    <div class="card-body">
      <%= render partial: "comments/form", locals: { commentable: @project } %>
      <%= render @project.comments.where(parent_id: nil) %>
    </div>
  </div>
