<div class="row">
  <div class="col-md-2">
    <div class="card">
      <div class="card-header">
        <div class="fa fa-search"></div>
        Search
      </div>
      <div class="card-body">
        <%= search_form_for @ransack_projects, as: :projects_search, url: @ransack_path do |f| %>
          <%= f.search_field :name_cont, placeholder: 'Name', class: 'form-control form-control-sm' %>
          <p></p>
          <%= f.search_field :content_cont, placeholder: 'Details', class: 'form-control form-control-sm' %>
          <p></p>
          <%= f.search_field :user_email_cont, placeholder: 'Challenger', class: 'form-control form-control-sm' %>
          <p></p>
          <%= f.button :submit, class: "btn btn-sm shiny" do%>
          <div class="fa fa-search"></div>
          Search
          <% end %>
        <% end %>
        <p></p>
        <%= link_to @ransack_path, class: 'btn btn-sm shiny' do %>
          <div class="fa fa-sync-alt"></div>
          Reset
        <% end %>
      </div>
      <div class="card-footer">
        <%= link_to '+ New Challenge', new_project_path %>
      </div>
      <div class="card-footer">
        <% @tags.each do |tag| %>
          <%= link_to controller: controller_name, action: action_name, courses_search: {course_tags_tag_id_eq: tag.id} do %>
            <div class="badge badge-info">
              <%= tag.name %>
              <span class="badge badge-light">
                <%= tag.course_tags_count %>
              </span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-10">
    <div class="card-columns">
      <% @projects.each do |project| %>
        <%= render 'projects/project', project: project %>
      <% end %>
    </div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
<br>
